<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" prefHeight="140.0" prefWidth="250.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.MainController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="140.0" prefWidth="250.0" spacing="5.0">
         <children>
            <Label text="Input:" />
            <TextField fx:id="input" onAction="#textInput" prefWidth="4.0" />
            <Label text="Result:" />
            <TextField fx:id="result" />
            <HBox spacing="5.0">
               <children>
                  <Button fx:id="settings" mnemonicParsing="false" onAction="#openSettingWindow" prefHeight="25.0" prefWidth="117.5" text="Settings" />
                  <Button fx:id="copy" mnemonicParsing="false" onAction="#copyResult" prefWidth="117.5" text="Copy" />
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</GridPane>
